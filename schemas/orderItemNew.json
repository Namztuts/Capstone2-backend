{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "http://example.com/orderItem.schema.json",
   "type": "object",
   "properties": {
      "order_id": {
         "type": "integer",
         "minimum": 1
      },
      "product_id": {
         "type": "integer",
         "minimum": 1
      },
      "quantity": {
         "type": "integer",
         "minimum": 1
      },
      "price_at_purchase": {
         "type": "number",
         "minimum": 0
      }
   },
   "required": ["order_id", "product_id", "quantity", "price_at_purchase"],
   "additionalProperties": false
}
